@model Movie


<div class="row mb-5">
    <div class="col-md-12">


        <div class="card mb-3">
            <div class="card-body">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="/img/@Model.ImageUrl" alt="@Model.Description" class="card-img" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title">
                                <b>@Model.Name</b>
                            </h3>
                            <p class="card-text">@Model.Description</p>
                            <br />
                            <p class="card-text"><b style="font-size: 20px;">Yönetmen: </b>@Model.Yonetmen</p>
                            <br />
                            <p class="card-text"><b style="font-size: 20px;">Oyuncular: </b>@Model.Oyuncular</p>
                            <br />
                            <p class="card-text"><small class="text-muted">2 days ago</small></p>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <br />
        <a href="/home/index">Diğer filmleri görmek için tıklayın</a>
        <br />
        <br />
        <br />
    </div>

    


</div>
