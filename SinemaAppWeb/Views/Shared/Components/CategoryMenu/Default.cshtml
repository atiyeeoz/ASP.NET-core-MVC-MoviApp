@model IEnumerable<Category>

<div class="list-group">
    <a href="/home/index" class="list-group-item list-group-item-action">Tüm Kategoriler</a>
    @foreach (var i in Model)
    {
        <a asp-action="Index" asp-controller="Home" asp-route-id="@i.Id" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==i.Id.ToString()?"activated":"")">@i.Name</a>
    }


</div>